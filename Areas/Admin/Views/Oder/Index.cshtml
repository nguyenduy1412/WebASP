@model IEnumerable<QLHS.Models.orders>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Đơn hàng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Sản phẩm</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">

    <!-- Default box -->
    <div class="col-12">
        <div class="card">
            <div class=" p-2 align-items-center d-flex justify-content-between">
               

                <div class="card-tools">
                    <form>
                        <div class="input-group input-group-sm" style="width: 150px;">

                            <input type="text" name="keyword" class="form-control float-right"
                                   placeholder="Search" value="">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card-body table-responsive p-0" style="height: 400px;">
                <table class="table table-head-fixed text-nowrap">
                    <thead>
                        <tr>
                            <th>
                                Địa chỉ
                            </th>
                            <th>
                                Ngày đặt
                            </th>
                            <th>
                               Tên người nhận
                            </th>
                            <th>
                                Số điện thoại
                            </th>
                            <th>
                                Trạng thái
                            </th>
                            <th>
                                Tồng tiền
                            </th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.address_ship)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.date_order)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.full_name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.phone)
                                </td>
                                <td>
                                    <select class="badge st" id="@item.id">
                                        <option value="0"  @(item.status==0 ? "selected" : "" ) >Chờ xác nhận</option>
                                        <option value="1"  @(item.status==1 ? "selected" : "" )  >Đã duyệt</option>
                                        <option value="2"  @(item.status==2 ? "selected" : "" )  >Đang giao</option>
                                        <option value="3" @(item.status==3 ? "selected" : "" )  >Giao thành công</option>
                                    </select>

                                </td>
                                <td>
                                    @Html.FormatValue(item.sum_money, "{0:#,###}") đ
                                </td>
                                
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
        </div>

    </div>

</section>