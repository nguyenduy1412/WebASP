
@model IEnumerable<QLHS.Models.categories>


<div class="category-area mb-30">
    <h3><a href="#">Danh mục<i class="fa fa-bars"></i></a></h3>
    <div class="category-menu">
        <nav class="menu">
            <ul>
                @foreach (var item in Model)
                {
                    <li><a href="@Url.Action("FindCategory", "Home",new { id = item.id })">@Html.DisplayFor(modelItem => item.category_name)</a></li>
                }
                <li class="rx-child"><a href="shop.html">Health, Fitness</a></li>
                <li class="rx-parent">
                    <a class="rx-default">
                        <span class="cat-thumb fa fa-plus"></span>
                        Thêm danh mục
                    </a>
                    <a class="rx-show">
                        <span class="cat-thumb fa fa-minus"></span>
                        close menu
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>

